rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS COLLECTION
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // CASES COLLECTION
    match /cases/{caseId} {
      // 1. CREATE
      allow create: if request.auth != null; 

      // 2. READ
      allow read: if request.auth != null && (
        resource.data.clientId == request.auth.uid || 
        resource.data.status == 'open'
      );

      // 3. UPDATE main document
      // Allow lawyers to increment proposalCount & update lastActivity
      allow update: if request.auth != null && (
        resource.data.clientId == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['proposalCount', 'lastActivity'])
      );
      
      // 4. HISTORY SUB-COLLECTION
      match /history/{historyId} {
        allow read, write: if request.auth != null && 
          get(/databases/$(database)/documents/cases/$(caseId)).data.clientId == request.auth.uid;
      }
      
      // 5. PROPOSALS SUB-COLLECTION
      match /proposals/{proposalId} {
        // Allow creating a proposal if authenticated
        allow create: if request.auth != null;
        
        // Allow reading proposals
        allow read: if request.auth != null;

        // Allow updating only if the user is the author
        allow update: if request.auth != null && resource.data.lawyerId == request.auth.uid;
        
        // Allow deleting only if the user is the author
        allow delete: if request.auth != null && resource.data.lawyerId == request.auth.uid;
      }
    }
  }
}
